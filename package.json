{
  "name": "ms-email-automation-to-drive",
  "version": "1.0.0",
  "description": "Backend API for email automation to OneDrive",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "verify": "node verify-config.js",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" NODE_ENV=test jest",
    "test:watch": "NODE_OPTIONS=\"--experimental-vm-modules\" NODE_ENV=test jest --watch",
    "test:coverage": "NODE_OPTIONS=\"--experimental-vm-modules\" NODE_ENV=test jest --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "coveragePathIgnorePatterns": ["/node_modules/"],
    "testMatch": ["**/__tests__/**/*.js", "**/?(*.)+(spec|test).js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ]
  },
  "keywords": [
    "microsoft",
    "graph",
    "email",
    "onedrive",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@azure/msal-node": "^2.6.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "firebase-admin": "^12.0.0",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.2.2"
  }
}
